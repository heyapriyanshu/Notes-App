<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"

    tools:context=".UI.Fragments.CreateNoteFragment">
    <LinearLayout
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/editTitle"
            android:hint="Title"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:background="@drawable/edittxtbg"
            android:layout_width="match_parent"
            android:layout_height="60dp">

        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:background="@drawable/edittxtbg"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="40dp">
                <TextView
                    android:text="High"
                    android:textSize="18sp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/editPRed"
                    android:background="@drawable/red_dot"
                    android:layout_width="25dp"

                    android:layout_height="25dp">


                </androidx.appcompat.widget.AppCompatImageView>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/edittxtbg"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="40dp">
                <TextView
                    android:text="Medium"
                    android:textSize="18sp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/editPYellow"
                    android:background="@drawable/yellow_dot"
                    android:layout_width="25dp"
                    android:layout_height="25dp">

                </androidx.appcompat.widget.AppCompatImageView>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/edittxtbg"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp">
                <TextView
                    android:text="Low"
                    android:textSize="18sp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/editPGreen"
                    android:background="@drawable/green_dot"
                    android:layout_width="25dp"
                    android:layout_height="25dp">

                </androidx.appcompat.widget.AppCompatImageView>
            </LinearLayout>

        </LinearLayout>
        <EditText
            android:id="@+id/editNotes"
            android:hint="Description"
            android:layout_marginTop="10dp"
            android:paddingTop="16dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:background="@drawable/edittxtbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine">

        </EditText>


    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_gravity="right|bottom"
        android:id="@+id/btnEditNotes"
        android:layout_margin="14dp"
        android:backgroundTint="@color/fg"
        android:src="@drawable/ic_baseline_check_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.google.android.material.floatingactionbutton.FloatingActionButton>


</FrameLayout>